@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&family=Quicksand:wght@300;400;500;600;700&display=swap')
@import 'line-awesome/dist/line-awesome/css/line-awesome.css'
@import 'nib'
    
normalize-css()
$color-primary= #717CF0
*
    box-sizing  border-box
@import 'classes'
@import 'forms'
    html
        height 100%  
    body
        font-family: 'Quicksand', sans-serif
        height 100%
        color #424242
    a
        color $color-primary
        font-weight 700
        text-decoration none
    #app 
        height 100%
    header
        position fixed
        top 0
        left 0
        width 100%
        height 100px
        display flex
        align-items center
        z-index 100
        background white
        border-bottom:  1px solid rgba(0,0,0,0.1.8)
        nav 
            width 100%
            div.column:nth-child(1)
                display flex
                flex-basis 50%
                align-items center
                input 
                    margin 0
            div.flex
                justify-content space-between
            img
                width 100px
            div.logo
                width 24px
                height 24px
                background transparent
                margin-right 120px
                display inline-block
                a   
                    color black
                    font-weight normal
                    background none
            form 
                flex-grow 1
                div.search-box
                    position relative
                    svg 
                        position absolute
                        left 10px
                        transform translate(0, 50%)
                    input 
                        padding-left 50px
                        &::placeholder
                            color rgba(0,0,0,0.2)
                        
            a[tag="button"]
                flex-basis 180px
            ul.user-actions
                margin 0
                padding 0
                li 
                    display inline-block
                    list-style none
                    a
                        font-size 32px
                        color black
                        margin-left 10px


    h1 
        font-family 'Dosis', sans-serif
        font-weight 300
        font-size 36px
    