@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&family=Quicksand:wght@300;400;500;600;700&display=swap')
@import 'line-awesome/dist/line-awesome/css/line-awesome.css'
@import 'nib'
    
normalize-css()
$color-primary= #717CF0
*
    box-sizing  border-box
@import 'classes'
@import 'forms'
    html
        height 100%  
    body
        font-family: 'Quicksand', sans-serif
        height 100%
        color #424242
    a
        color $color-primary
        font-weight 700
        text-decoration none
    #app 
        height 100%
    header
        position fixed
        top 0
        left 0
        width 100%
        height 100px
        display flex
        align-items center
        z-index 100
        nav 
            width 100%
            div.logo
                width 36px
                height 36px
                border solid 4px white
                border-radius 50%
    h1 
        font-family 'Dosis', sans-serif
        font-weight 300
        font-size 36px
    